    <!-- newPost -->
    <section id="newPost">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 text-center">
            <h2 class="section-heading text-uppercase"><%= @headline  %></h2>
            <h3 class="section-subheading text-muted"><%= @paragraph %></h3>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <form id="newPostForm" name="sentMessage" action="/create" method="post"novalidate>
              <div class="row">
                <div class="col-md-12 text-center">
                  <div class="form-group">
                    <input name="title" class="form-control" id="name" type="text" placeholder="Post Heading *" required data-validation-required-message="Please enter your name.">
                    <p class="help-block text-danger"></p>
                  </div>
                  <div class="form-group">
                    <textarea name="body" class="form-control" id="message" placeholder="Post Body *" required data-validation-required-message="Please enter a message."></textarea>
                    <p class="help-block text-danger"></p>
                  </div>
                </div>
                <div class="clearfix"></div>
                <div class="col-lg-12 text-center">
                  <div id="success"></div>
                  <button id="sendMessageButton" class="btn btn-primary btn-xl text-uppercase" type="submit">Create Post</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>

 