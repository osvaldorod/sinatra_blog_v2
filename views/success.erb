  <!-- newPost -->
    <section id="newPost">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 text-center">
            <h2 class="section-heading text-uppercase"><%= @postTitle  %></h2>
            <h3 class="section-subheading text-muted"><%= @postBody %></h3>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <form id="newPostForm" name="sentMessage"  action="/" method="get" novalidate>
              <div class="row">
                <div class="col-md-12 text-center">
                    <h2 class="section-heading">Your post entry was successfully created. </h2>
                </div>
                <div class="clearfix"></div>
                <div class="col-md-12 text-center">
                  <div id="success"></div>
                  <button id="sendMessageButton" class="btn btn-primary btn-xl text-uppercase" type="submit">View Posts</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>


